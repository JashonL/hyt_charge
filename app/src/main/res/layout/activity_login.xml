<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerView"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa70"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa35"
            android:layout_toLeftOf="@+id/tvRight"
            android:layout_toRightOf="@+id/ivLeft"
            android:gravity="center"
            android:text="@string/m24登陆"
            android:textStyle="bold"
            android:textColor="@color/title_1"
            android:textSize="@dimen/xa37" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/xa105"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/touch_bg_main"
            android:paddingBottom="@dimen/xa35"
            android:paddingLeft="@dimen/xa18"
            android:paddingRight="@dimen/xa18"
            android:paddingTop="@dimen/xa35" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="@dimen/xa140"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/touch_bg_main"
            android:gravity="center"
            android:text="@string/m23注册"
            android:paddingBottom="@dimen/xa32"
            android:paddingRight="@dimen/xa11"
            android:paddingTop="@dimen/xa32"
            android:textColor="@color/forget_password_color"
            android:textSize="@dimen/xa35" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/xa427"
        android:layout_height="@dimen/xa172"
        android:layout_marginTop="@dimen/xa31"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:layout_marginTop="@dimen/xa120"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/xa24"
        android:paddingRight="@dimen/xa24">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sign_user" />


        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa12"
            android:background="@null"
            android:hint="@string/m25请输入用户名"
            android:textColor="@color/title_2"
            android:textSize="@dimen/xa24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="#dedede"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:layout_marginTop="@dimen/xa30"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/xa24"
        android:paddingRight="@dimen/xa24">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/xa20"
            android:layout_height="@dimen/xa24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sign_password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa12"
            android:background="@null"
            android:hint="@string/m26请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/title_2"
            android:textSize="@dimen/xa24" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/xa30"
        android:layout_marginRight="@dimen/xa30"
        android:background="#dedede"
        android:orientation="vertical" />


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa88"
        android:layout_below="@+id/etPwd"
        android:layout_marginLeft="@dimen/xa75"
        android:layout_marginRight="@dimen/xa75"
        android:layout_marginTop="@dimen/xa49"
        android:background="@drawable/selector_circle_btn_green_gradient"
        android:stateListAnimator="@null"
        android:text="@string/m24登陆"
        android:textColor="@color/headerView" />

    <TextView
        android:id="@+id/tv_foget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ya40"
        android:gravity="center"
        android:text="@string/m22忘记密码"
        android:textColor="@color/forget_password_color"
        android:textSize="@dimen/xa30" />

</LinearLayout>
