<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical"
    tools:context=".activity.AboutActivity">

    <include layout="@layout/header_view" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa375"
        android:background="@color/headerView">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/xa187"
            android:layout_height="@dimen/xa187"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xa37"
            android:background="@drawable/app_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/xa49"
            android:text="v1.0"
            android:textSize="@dimen/xa32" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xa46"
                android:layout_marginRight="@dimen/xa46"
                android:background="#dedede"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/relative_agreement"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/xa128"
                android:background="@drawable/selector_list_rect_item_click">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/xa82"
                    android:layout_height="@dimen/xa82"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa46"
                    android:background="@drawable/agreement" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/xa51"
                    android:layout_toLeftOf="@+id/ivBase"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="@string/m54用户协议"
                    android:textColor="#333333"
                    android:textSize="@dimen/xa32" />

                <ImageView
                    android:id="@+id/ivBase"
                    android:layout_width="@dimen/xa58"
                    android:layout_height="@dimen/xa35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/charger_device_item_more"
                    android:layout_marginRight="@dimen/xa28" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/xa46"
                android:layout_marginRight="@dimen/xa46"
                android:background="#dedede"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
