<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xa90"
        android:background="@color/headerView">

        <TextView
            android:id="@+id/tv_key"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/xa30"
            android:gravity="center_vertical"
            android:text="@string/m149电桩名称"
            android:textColor="@color/title_1"
            android:textSize="@dimen/xa30" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/xa21"
            android:layout_toLeftOf="@+id/iv_more1"
            android:gravity="center_vertical"
            android:textColor="@color/title_3"
            android:textSize="@dimen/xa30" />

        <ImageView
            android:id="@+id/iv_more1"
            android:layout_width="@dimen/xa12"
            android:layout_height="@dimen/xa30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xa30"
            android:src="@drawable/charger_device_item_more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/xa2"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_background2" />

    </RelativeLayout>

</LinearLayout>