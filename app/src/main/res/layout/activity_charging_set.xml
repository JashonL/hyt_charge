<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background_small"
    tools:context=".activity.ChargingSetActivity">

    <include layout="@layout/header_view_title" />

    <RelativeLayout
        android:layout_marginTop="@dimen/xa20"
        android:background="@color/headerView"
        android:id="@+id/rl_params_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ya90">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/xa40"
            android:layout_height="@dimen/xa40"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_charging_params"
            android:layout_marginLeft="@dimen/xa50" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa25"
            android:layout_toRightOf="@+id/imageView1"
            android:text="@string/m141参数设置"
            android:textColor="@color/title_1"
            android:textSize="@dimen/xa30" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/xa12"
            android:layout_height="@dimen/xa30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xa30"
            android:src="@drawable/charging_params_setting" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dedede"
        android:orientation="vertical"/>


    <RelativeLayout
        android:background="@color/headerView"
        android:id="@+id/rl_charging_grant"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ya90">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/xa40"
            android:layout_height="@dimen/xa40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_charging_grant"
            android:layout_marginLeft="@dimen/xa50" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xa25"
            android:layout_toRightOf="@+id/imageView3"
            android:text="@string/m142授权管理"
            android:textColor="@color/title_1"
            android:textSize="@dimen/xa30" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/xa12"
            android:layout_height="@dimen/xa30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xa30"
            android:src="@drawable/charging_params_setting" />

    </RelativeLayout>


</LinearLayout>
